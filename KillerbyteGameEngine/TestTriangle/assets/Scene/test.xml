<?xml version ="1.0"?>
<scene>
	<name>Test Level</name>
	<width>1000</width>
	<height>700</height>
	<resources>
		<audio>
			<file name="assets/Audio/chirp.wav" alias = "chirp" />
		</audio>
		<image>
			<file name="assets/Image/dudette_01.png" alias = "dudette" />
		</image>
	</resources>
	<level>
		<camera type = "ortho">
			<lookAt>
				<position>
					<X>0.0</X>
					<Y>0.0</Y>
					<Z>1.0</Z>
				</position>
				<target>
					<X>0.0</X>
					<Y>0.0</Y>
					<Z>0.0</Z>
				</target>
			</lookAt>
		</camera>
		<player>
			<position> <!-- The Center of the object -->
				<X>0.0</X>
				<Y>0.0</Y>
				<Z>0.0</Z>
			</position>
			<width>100</width>
			<height>200</height>
			<!--<texture alias = "dudette" /> -->
			<!-- Add a model resource link here if we are using a model otherwise we create a rectangle -->
			<shader>
				<vertex path = "assets/shader.vert" />
				<fragment path = "assets/shader.frag" />
			</shader>
		</player>
	</level>
</scene>